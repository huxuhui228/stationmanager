<script>
layui.use('form', function(){
  var form = layui.form;
  form.render();
});
layui.use('laydate', function(){
  var laydate = layui.laydate;
  lay('#datefield>input').each(function(){
  laydate.render({
    elem: this
    ,trigger: 'click'
    ,zIndex: 99999999
  });
}); 
}); 

</script>
